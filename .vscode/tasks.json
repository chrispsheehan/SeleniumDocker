{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [                    
        {
            "label": "clean",
            "command": "dotnet clean",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },           
            "presentation": {
              "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },        
        {
            "label": "build",
            "command": "dotnet build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src"
            }, 
            "dependsOn": "clean",
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run",
            "command": "dotnet Sandpit.dll",            
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src/bin/Debug/netcoreapp3.1/"
            },             
            "dependsOn": "build",
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        }        
    ]
}